# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
tls_certcheck  on
logfile        ~/.msmtp.log

# account details for the used mail account
account        <account_name>
host           <mail_host>      # e.g. mail.example.com
domain         <mail_domain>    # e.g. example.com
port           <mail_port>      # e.g. 587
from           <from_field>     # e.g. wrf@example.com
user           <user_name>
password       <password>

# Set a default account
account default : <account_name>
